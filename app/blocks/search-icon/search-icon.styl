$icon-width = 3px
$icon-color = $gray

.search-icon
	position relative
	
	display block
	width 100%
	height 100%

	&::before
		content ''
		position absolute
		top 0
		left 0
		
		width 75%
		height 75%
		
		border $icon-width solid $icon-color
		border-radius 50%
			
	&::after
		content ''
		position absolute
		
		right 0
		bottom 14%
		
		width 46%
		height $icon-width
		
		background $icon-color
		
		transform rotate(45deg)
			