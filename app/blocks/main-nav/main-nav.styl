$color-main-nav = $color-primary

.main-nav
	position relative
	width 100%
	
	&__control
		display flex
		justify-content space-between
		
		+above('media-m')
			float right
		
		+above('media-xxl')
			margin-top 5px

	&__menu-switcher
		+above('media-m')
			display none
	
	&__search-switcher
		width 50px
		height 50px

	&__menu
		position absolute
		right 0
		left 0
		
		display none
		padding-bottom 40px
		
		background $color-main-nav
		
		&_opend
			display block
		
		+above('media-m')
			position static
			
			display block
			padding 0
			
			background none
			
	
	&__search
		position absolute
		right 0
		left 0
		
		display none
		width 100%
		padding-top $space-xs
		padding-bottom $space-xl
		
		background $color-main-nav
		
		&_opend
			display block


// if no javascript
.no-js .main-nav
	&__control
		display none
	
	&__menu
		position static
		
		display block
		padding-bottom 0
	
	&__search
		position static
		
		display block
		padding-bottom $space-xs
