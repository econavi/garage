*,
*:before, 
*:after
	box-sizing border-box
	outline none
	margin 0
	padding 0
	
*:focus
	box-shadow 0 0 0 1px $color-brand

html, 
body
	width 100%
	height 100%

html
	font-size 10px

body
	font-family $font-family
	font-size $font-size-m
	line-height $line-height-default

img
	max-width 100%
	height auto