*,
*:before, 
*:after
	box-sizing border-box
	outline none
	margin 0
	padding 0
	
*:focus
	box-shadow $box-shadow-hover

html, 
body
	position relative
	width 100%
	height 100%

html
	font-size 10px

body
	font-family $font-family
	font-size $font-size-xxs
	line-height $line-height-default

img
	max-width 100%
	height auto

/* Временно отключенные блоки */

.main-nav,
.banner__link,
.feedback-section
	display none !important